{
    "compilerOptions": {
        /*
        "sourceMap": true,
        "allowJs": true,
        */
        "rootDir": "src",
        "outDir": "./build/",
        "module": "es2022",
        "moduleResolution": "node",
        "target": "es2022",
        "lib": ["es2022"],
        "esModuleInterop": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "express-async-errors": ["."]
        }
    },
    "ts-node": {
        "esm": true
        /*
        "compilerOptions": {
            "module": "CommonJS"
        }
        */
    },
    "exclude": [ "node_modules", "build", "upload" ]
}
